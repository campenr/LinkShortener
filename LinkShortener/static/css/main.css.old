html {
    font-family:sans-serif;
}

*{
    margin: 0 auto;
	padding: 0;
}

html, body {
    height: 100%;
}

body {
    text-align: center;
    background: #fafafa;
}

h1 {
    font-family: Georgia, serif;
    font-size: 2.1em;
    letter-spacing: 0.05em;
}

/*h2*/.login-heading {
    font-family: Arial, sans-serif;
    font-size: 1.5em;
}

/*div*/.main-wrapper {
    min-height: 100%;
}

/*nav*/.nav {
    height: 50px;
    padding-top: 15px;
}

/*div*/.main-content-wrapper {
    overflow: auto;
	padding-bottom: 30px;
}

/*div*/.main-content {

}

/*div*/.login-button-wrapper, /*div*/.logout-button-wrapper {
    padding-top: 10px;
    padding-bottom: 10px;
}

/*a*/.button-link {
    -webkit-appearance: button;
    -moz-appearance: button;
    appearance: button;

    text-decoration: none;
    color: initial;
}

/*a*/.link {
	text-decoration: none;
	color: #000000;
}

/*a*/.link:hover {
	text-decoration: none;
	color: #000000;
}

/*div*/.login-heading-wrapper {
    padding-top: 30px;
    padding-bottom: 15px;
}

/*div*/.shorten-link-form {
    padding-top: 10px;
    padding-bottom: 10px;
}

/*div*/.link-table-container {
    padding-top: 20px;
    padding-bottom: 70px;
}

/*table*/.link-table {
    padding-top: 10px;
    padding-bottom: 10px;
    table-layout: fixed;
    border-collapse: collapse;
    width: 75%;
}

/*table*/.link-table th, /*table*/.link-table td {
    padding: 5px 15px 5px 15px;
}

/*table.link-table*/.link-table-head {
    font-weight: bold;
}

/*table.link-table*/.col-1 {
    width: 45%;
}

/*table.link-table*/.col-2 {
    width: 17%;
}

/*table.link-table*/.col-3 {
    width: 30%;
}

/*table.link-table*/.col-4 {
    width: 4%;
}

/*table.link-table*/.col-5 {
    width: 4%;
}

/*button*/.copy-button, /*button*/.delete-button {
    opacity: 0;
}

/*table.link-table*/.link-table-body tr:hover {
    background: #eee;
}

tr:hover /*button*/.copy-button, tr:hover /*button*/.delete-button{
    opacity: 1;
}

button {
    padding-left: 5px;
    padding-right: 5px;
    padding-top: 2px;
    padding-bottom: 2px;
}

/*footer*/.footer {
    position: relative;
	margin-top: -45px; /* negative value of footer height including padding*/
	height: 45px;
	clear: both;
}

/*div*/.footer-content {
    font-size: 0.85em;
    padding-bottom: 5px;
}

/*p*/.version {
    font-size: 0.75em;
    padding: 5px;
}
